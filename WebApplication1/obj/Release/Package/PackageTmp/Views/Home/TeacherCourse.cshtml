@model List<WebApplication1.Models.courses>
@{
    Layout=null;
}
<script src="~/Scripts/jquery.min.js"></script>

<header id="head" class="secondary">
    <div class="container">
        <div class="row">
            <div class="col-sm-8">
                <h1>SELECT COURSE (TEACHER)</h1>
            </div>
        </div>
    </div>
</header>
<form action="/Home/teacherCourse" method="post">
    <select class="form-control" name="courses" id="courses">
        @foreach (var s in Model)
        {
            <option value="@s.code">@s.name</option>
        }
    </select>
    <input type="hidden" name="teacher_id" value="@Session["id"]" />
    <input type="submit">ADD COURSE
</form>

